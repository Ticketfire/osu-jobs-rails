= form_with(model: job_posting, local: true) do |form|
  - if job_posting.errors.any?
    #error_explanation
      %h2
        = pluralize(job_posting.errors.count, "error")
        prohibited this job_posting from being saved:
      %ul
        - job_posting.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :title
    = form.text_field :title
  .field
    = form.label :url
    = form.text_field :url
  .field
    = form.label :content
    = form.text_area :content
  .field
    = form.label :entry_id
    = form.number_field :entry_id
  .field
    = form.label :job_published_at
    = form.datetime_select :job_published_at
  .field
    = form.label :job_updated_at
    = form.datetime_select :job_updated_at
  .field
    = form.label :department_id
    = form.text_field :department_id
  .actions
    = form.submit
